<UserControl
    x:Class="SG_Radio_for_8._1.PrivacyPolicyUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SG_Radio_for_8._1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <StackPanel>
                <TextBlock Text="SG Radio does not capture any personal information which" FontFamily="Segoe UI" FontWeight="SemiLight" FontSize="18" Foreground="Black" />
                <TextBlock Text="identifies you on your device, on our servers, or any other" FontFamily="Segoe UI" FontWeight="SemiLight" FontSize="18" Foreground="Black"  />
                <TextBlock Text="types of persistent storage." FontFamily="Segoe UI" FontWeight="SemiLight" FontSize="18" Foreground="Black"  />
                <TextBlock Text="" FontFamily="Segoe UI" FontWeight="SemiLight" FontSize="18" Foreground="Black" />
                <TextBlock Text="For more information and enquiries, please contact the developer." FontFamily="Segoe UI" FontWeight="SemiLight" FontSize="18" Foreground="Black" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
